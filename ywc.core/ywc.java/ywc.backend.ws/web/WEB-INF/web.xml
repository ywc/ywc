<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>ywc.backend.ws.upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>img</servlet-name>
        <servlet-class>ywc.backend.ws.img</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>router</servlet-name>
        <servlet-class>ywc.backend.ws.router</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>ywc.backend.ws.action</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>img</servlet-name>
        <url-pattern>/img</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>router</servlet-name>
        <url-pattern>/delete/*</url-pattern>
        <url-pattern>/add/*</url-pattern>
        <url-pattern>/update/*</url-pattern>
        <url-pattern>/get/*</url-pattern>
        <url-pattern>/assoc/*</url-pattern>
        <url-pattern>/disassoc/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/action/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
